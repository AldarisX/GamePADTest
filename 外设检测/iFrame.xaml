        <Label x:Name="forceLab" Content="选择手柄" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <Label x:Name="supportLab" Content="选择手柄" HorizontalAlignment="Left" Margin="200,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="infLab" Content="选择手柄" HorizontalAlignment="Left" Margin="402,12,0,0" VerticalAlignment="Top"/>
        <Label x:Name="btnLab" Content="选择手柄" HorizontalAlignment="Left" Margin="402,195,0,0" VerticalAlignment="Top"/>
        <Button x:Name="xinputBtn" Content="查看Xinput" Visibility="Hidden" HorizontalAlignment="Left" Margin="643,350,0,0" VerticalAlignment="Top" Width="75" Click="xinputBtn_Click"/>
    </Grid>
</Window>
